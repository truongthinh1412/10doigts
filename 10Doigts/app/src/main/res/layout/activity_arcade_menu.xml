<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="puf.example.a10doigts.ArcadeMenuActivity"
    android:background="@drawable/screen_game"
    android:id="@+id/layout_arcademenu">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/back_arcademenu"
        android:background="@drawable/btn_back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/level1_button_arcademenu"
        android:background="@drawable/btn_level1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/level2_button_arcademenu"
        android:background="@drawable/btn_level2"
        android:layout_below="@+id/level1_button_arcademenu"
        android:layout_alignLeft="@+id/level1_button_arcademenu"
        android:layout_alignStart="@+id/level1_button_arcademenu"
        android:layout_marginTop="29dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:id="@+id/level3_button_arcademenu"
        android:background="@drawable/btn_level3"
        android:layout_below="@+id/level2_button_arcademenu"
        android:layout_alignLeft="@+id/level2_button_arcademenu"
        android:layout_alignStart="@+id/level2_button_arcademenu"
        android:layout_marginTop="32dp" />

</RelativeLayout>
